<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
	<Product Id="*" 
           Name="ContinuousTests" 
           Language="1033" 
           Version="1.0.48.0" 
           Manufacturer="ContinuousTests" 
           UpgradeCode="759731e0-c984-4959-8d21-4ff66899fe9f">
    
		<Package InstallerVersion="200" Compressed="yes" InstallScope="perMachine" />
    
    <!--Components.wxs is autogenerated by HeatDirectory task in .wixproj-->

    <!--Set up major upgrade scenario-->
		<MajorUpgrade DowngradeErrorMessage="A newer version of [ProductName] is already installed." 
                  AllowDowngrades="no" 
                  AllowSameVersionUpgrades="yes"
                  Schedule="afterInstallValidate" />
    
    <!--Embed CAB files within MSI-->
		<MediaTemplate EmbedCab="yes" />

		<Feature Id="ProductFeature" Title="ContinuousTests" Level="1">
			<ComponentGroupRef Id="ProductComponents" />
      <ComponentGroupRef Id="VisualStudioAddInComponents" />
		</Feature>
    
    <!--User interface, using stock WiX wizard-->
    <UIRef Id="WixUI_InstallDir" />
    <Property Id="WIXUI_INSTALLDIR" Value="INSTALLFOLDER" />
    <WixVariable Id="WixUILicenseRtf" Value="license.rtf" />
    <!--NOTE: Background: #202121-->
    <WixVariable Id="WixUIDialogBmp" Value="left_hand_branding.jpg" />
    <WixVariable Id="WixUIBannerBmp" Value="top_nav.jpg"/>
    
    <!--Program and Features info-->
    <Property Id="ARPURLINFOABOUT" Value="http://continuoustests.com/" />
    <Property Id="ARPURLUPDATEINFO" Value="http://continuoustests.com/download.html" />

    <CustomActionRef Id="DevEnv_9"/>
    
    <!--TODO: Register Visual Studio extension-->
    <!--TODO: Brand installer images-->
    <!--TODO: Update to use VSIX instead of Add-Ins?-->
	</Product>
</Wix>